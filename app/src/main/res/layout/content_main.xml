<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">
    <Button
            android:text="Scan for ble "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="313dp"
            android:id="@+id/register_button" tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Connect Gatt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connect_gatt" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/register_button"/>
    <Button
            android:text="enable notifications "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notifications_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/connect_gatt"/>
    <Button
            android:text="Set profile listener"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uuids_button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/notifications_button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Register sink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sink_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/uuids_button"/>
    <Button
            android:text="Create socket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/socket_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/sink_button"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="108dp"
            tools:layout_editor_absoluteX="161dp" android:id="@+id/heart_rate" android:textSize="50sp"/>
</android.support.constraint.ConstraintLayout>